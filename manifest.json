{
    "manifest_version": 3,
    "name": "Price Comparison Extension",
    "version": "1.0",
    "description": "Compare product prices across multiple websites.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://your-backend-domain.com/*"
    ]
  }
  